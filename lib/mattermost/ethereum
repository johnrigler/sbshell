export _ETHERSCAN_API=EPSBJ89UB2Y4MDBDD19EGNGPRGNFVA1CDB

etherscan.balance() {

ADDR=$1
curl "https://api.etherscan.io/api?module=account&action=balancemulti&address=$ADDR&tag=latest&apikey=$_ETHERSCAN_API"

}
ethereum.poloniex() {

echo 0x8b6b80dbc6759dbbe753c7111f2ba5e3a0d8e355

}

ethereum.purple() {

echo 0xb42b20ddbEabdC2a288Be7FF847fF94fB48d2579

}

ethereum.price() {

curl "https://api.etherscan.io/api?module=stats&action=ethprice&apikey=$_ETHERSCAN_API"

}
