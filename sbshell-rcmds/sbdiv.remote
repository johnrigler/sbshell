#!/bin/bash

eval `xargs` # ; sbfont green ; env | grep SB ; echo $PATH ; sbfont white

echo $SBFLAGS | grep "APPEND" >/dev/null
if [[ $? -eq 0 ]]
	then
	REDIR="APPEND"
	fi

TARGET="$SBPATH/$SBDIR/$SBPAGE-$SBSECTION.php"

if [[ $REDIR == "APPEND" ]]
	then
	grep -v  '</div>' $TARGET > $$
	mv $$ $TARGET
	else
	echo "  <div>" > $TARGET
	fi

cat $SBPATH/$SBDIR/$1.temp >> $TARGET
rm /$SBPATH/$SBDIR/$1.temp

echo "  </div>" >> $TARGET
